@using TravelTripProjee.Models.Siniflar
@model List<Blog>
<div class="box-left">
    @foreach (var item in Model)
    {
        <div class="bot-img" style="width:120px; height:80px;">
            <img src="@item.BlogImage" alt="" style="width:120px; height:80px;" />
        </div>
        <div class="bot-desc">
            <p>@item.Aciklama.Substring(0, 80)...</p>
        </div>
        <div class="clear"></div>
    }

</div>

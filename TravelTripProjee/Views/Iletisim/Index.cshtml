    <!--end slider -->
    <!--script-->
    <script type="text/javascript" src="/web1/js/move-top.js"></script>
    <script type="text/javascript" src="/web1/js/easing.js"></script>
    <!--/script-->
    <script type="text/javascript">
        jQuery(document).ready(function ($) {
            $(".scroll").click(function (event) {
                event.preventDefault();
                $('html,body').animate({ scrollTop: $(this.hash).offset().top }, 900);
            });
        });
    </script>
    <!---->

</head>


<div class="contact">
    <div class="wrap">
        <div class="contact-top">
            <h3>Bizimle İletişime Geçin</h3>
            <p>Bize değerli fikirlerinizi ve görüşlerinizi bildirmek için bizimle iletişime geçebilirsiniz.</p>
        </div>
        @Html.Action("MesajGonder", "Iletisim")
        <div class="clear" style="margin-top:20px;"></div>
        <div class="contact-bottom">
            <div class="contact-left">
                <div class="contact-add">
                    @foreach (var item in Model)
                    {
                        <h3>Adres</h3>
                        <p>@item.AdresAcik</p>
                        <p>Telefon:@item.Telefon</p>
                        <p>Fax:@item.Telefon</p>
                        <p>Mail:<a href="@item.Mail">@item.Mail</a></p>
                    }
                </div>
            </div>

            <div class="clear"></div>
        </div>
        <div class="clear"></div>
    </div>
</div>


